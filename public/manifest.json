{
  "manifest_version": 2,
  "name": "Arancina is the only way",
  "version": "1.0.0",
  "description": "An auto dom fixer for specific arancina words",
  "author": "Daniele Cin√†",
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "<all_urls>"
  ],
  "web_accessible_resources": ["static/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Arancina is the way"
  }
}
